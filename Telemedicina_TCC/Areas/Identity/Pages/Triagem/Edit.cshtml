@page
@model Telemedicina_TCC.Areas.Identity.Pages.Triagem.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Triagens</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Triagens.ID" />
            <div class="form-group">
                <label asp-for="Triagens.Alergia" class="control-label"></label>
                <input asp-for="Triagens.Alergia" class="form-control" />
                <span asp-validation-for="Triagens.Alergia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Triagens.DoencaCronica" class="control-label"></label>
                <input asp-for="Triagens.DoencaCronica" class="form-control" />
                <span asp-validation-for="Triagens.DoencaCronica" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Triagens.Diabetes" /> @Html.DisplayNameFor(model => model.Triagens.Diabetes)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Triagens.Pressao" class="control-label"></label>
                <input asp-for="Triagens.Pressao" class="form-control" />
                <span asp-validation-for="Triagens.Pressao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Triagens.ProblemaRespiratorio" /> @Html.DisplayNameFor(model => model.Triagens.ProblemaRespiratorio)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Triagens.Peso" class="control-label"></label>
                <input asp-for="Triagens.Peso" class="form-control" />
                <span asp-validation-for="Triagens.Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Triagens.Temperatura" class="control-label"></label>
                <input asp-for="Triagens.Temperatura" class="form-control" />
                <span asp-validation-for="Triagens.Temperatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Triagens.Created" class="control-label"></label>
                <input asp-for="Triagens.Created" class="form-control" />
                <span asp-validation-for="Triagens.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
